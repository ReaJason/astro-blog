---
import HeadSEO from '@components/HeadSEO.astro'
import SideBar from '@components/SideBar.astro'

export interface Props {
  title: string
}

const { title } = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <HeadSEO title={title} />
    <title>{title}</title>
  </head>
  <body>
    <div class="back-mask"></div>
    <div class="relative flex h-full min-h-screen w-full">
      <SideBar />
      <slot />
    </div>
    <style>
      .back-mask {
        position: fixed;
        z-index: 9999;
        top: 16px;
        left: 16px;
        right: 16px;
        bottom: 16px;
        pointer-events: none;
      }
    </style>
  </body>
</html>
